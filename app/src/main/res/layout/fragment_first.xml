<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/choose_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/hello_first_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_tesco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tesco"
        app:layout_constraintBottom_toTopOf="@id/button_sainsburys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_shop" />

    <Button
        android:id="@+id/button_sainsburys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sainsburys"
        app:layout_constraintBottom_toTopOf="@id/button_asda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_tesco" />

    <Button
        android:id="@+id/button_asda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asda"
        app:layout_constraintBottom_toTopOf="@id/button_boots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sainsburys" />

    <Button
        android:id="@+id/button_boots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boots"
        app:layout_constraintBottom_toTopOf="@id/button_milkandmore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_asda" />

    <Button
        android:id="@+id/button_milkandmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milkandmore"
        app:layout_constraintBottom_toTopOf="@id/spacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_boots" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_ethicalconsumer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_milkandmore" />

    <Button
        android:id="@+id/button_ethicalconsumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ethical_consumer"
        app:layout_constraintBottom_toTopOf="@id/button_goodshoppingguide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spacer" />

    <Button
        android:id="@+id/button_goodshoppingguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/good_shopping_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_ethicalconsumer" />

</androidx.constraintlayout.widget.ConstraintLayout>